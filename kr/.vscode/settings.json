{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.validate": ["javascript", "css", "html", "markdown"],
  "eslint.enable": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "emmet.showAbbreviationSuggestions": true,
  "emmet.syntaxProfiles": {
    "html": {
      "tag_case": "lower",
      "profile": "html5"
    }
  },
  "editor.tabSize": 2, // 기본 들여쓰기 크기 (공백의 갯수)
  "editor.insertSpaces": false, // true: Use Space , false: Use Tap
  "[html]": {
    "editor.tabSize": 2 // HTML 파일은 2칸 들여쓰기
  },
  "[json]": {
    "editor.tabSize": 4 // JSON 파일은 4칸 들여쓰기
  }
}
